pipeline {
    agent any
	tools {
      terraform 'terraform'
    }
	parameters {
        string(name: 'BRANCH', defaultValue: '', description: 'Branch to pull changes')
		string(name: 'ENV_VARIABLE', defaultValue: '', description: 'ENV Variable')
		choice(name: 'REGION', choices: [us], description: 'Select the region')
        choice(name: 'ZONE', choices: [central1], description: 'Select the zone')
        string(name: 'PROJECT_NAME', defaultValue: '', description: 'Project name')
        string(name: 'JFROG_REGISTRY', defaultValue: '', description: 'Jfrog registry domain')
        choice(name: 'JFROG_REPOSITORY', choices: [] , description: 'Jfrog registry domain')
        string(name: 'JFROG_IMAGE_TAG', defaultValue: 'latest', description: 'Gogs image tag')
    }
    stages {
        stage('Checkout') { 
            steps {
                git branch: 'env.BRANCH', credentialsId: 'jenkins-ssh-git-key', url: 'git@github.com:nuwmdiploma/gogs-infrastructure.git'
            }
        }
        stage('Init and Plan'){
			steps {
				script {
                    def environmentGOGS = "${params.ENV}-${params.ENV_VARIABLE}-${params.REGION}-${params.ZONE}-${params.PROJECT_NAME}"
                    echo "Selected environment GOGS: ${environmentGOGS}"
					env.GOGS_ENV = environmentGOGS
                }
                withCredentials([string(credentialsId: '', variable: '')]) {
                    script {
                        env.TF_VAR_jfrog_password = "${JFROG_PASSWORD}"
                        env.TF_VAR_jfrog_registry = "${JFROG_REGISTRY}"
                        env.TF_VAR_jfrog_repository = "${JFROG_REPOSITORY}"
                        env.TF_VAR_gogs_build_tag = "${JFROG_IMAGE_TAG}"
                    }
                }
                withCredentials([file(credentialsId: "values-v1-${params.ENV}", variable: 'VALUES')]) {
			        dir('terraform/gogs-app/modules/gogs') { 
			            sh 'cat $VALUES > values-v1.yaml'
			        }
                }
			    withCredentials([file(credentialsId: "GCP-SA-${params.ENV}", variable: 'GOOGLE_CREDENTIALS')]) {
			        dir('terraform/gogs-app/environments') {
			            sh 'make plan'
			        }
			    }
			}
		}
		stage('Approve'){
			steps {
			    withCredentials([file(credentialsId: "GCP-SA-${params.ENV}", variable: 'GOOGLE_CREDENTIALS')]) {
			        dir('terraform/gogs-app/environments') {
			            sh 'make apply'
			        }
			    }
			}
		}
    }
    post {
        always {
            cleanWs()
        }
    }
}
